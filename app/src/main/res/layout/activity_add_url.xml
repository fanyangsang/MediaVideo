<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:background="@drawable/bg_me_top"
        android:layout_height="100dp" />

    <include
        android:id="@+id/titleRelative"
        layout="@layout/layout_title" />
    <LinearLayout
        android:layout_below="@+id/titleRelative"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_marginTop="-20dp"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_view"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Url"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <!--        <TextView-->
                        <!--            android:id="@+id/tv_name1"-->
                        <!--            android:layout_width="match_parent"-->
                        <!--            android:layout_height="wrap_content"-->
                        <!--            android:text="person information"-->
                        <!--            android:layout_centerVertical="true"-->
                        <!--            android:textColor="#000000"-->
                        <!--            android:layout_marginLeft="3dp"-->
                        <!--            android:textSize="16sp" />-->
                        <EditText
                            android:id="@+id/tv_url"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="140dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/iv_arrow_0"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入Url..."
                            android:textColor="@color/colorTheme"
                            android:textColorHint="@color/colorACA"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_arrow_0"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_right"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#cccccc" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="名称"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <!--        <TextView-->
                        <!--            android:id="@+id/tv_name1"-->
                        <!--            android:layout_width="match_parent"-->
                        <!--            android:layout_height="wrap_content"-->
                        <!--            android:text="person information"-->
                        <!--            android:layout_centerVertical="true"-->
                        <!--            android:textColor="#000000"-->
                        <!--            android:layout_marginLeft="3dp"-->
                        <!--            android:textSize="16sp" />-->
                        <EditText
                            android:id="@+id/ed_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="140dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/iv_arrow_2"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入名称..."
                            android:textColor="@color/colorTheme"
                            android:textColorHint="@color/colorACA"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_arrow_2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_right"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#cccccc" />
                    </RelativeLayout>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rl_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:focusable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_title_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="类型"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/iv_arrow_8"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="请选择类型..."
                        android:textColor="@color/colorTheme"
                        android:textColorHint="@color/colorACA"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_arrow_8"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_down" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#cccccc" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit"
                style="@style/btn_style"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ll_info"
                android:layout_marginBottom="30dp"
                android:text="确定" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>