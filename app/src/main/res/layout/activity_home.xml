<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:showDividers="middle">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_pk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_main_home"
            android:gravity="center"
            android:orientation="vertical"
            android:text="视频"
            android:textColor="@drawable/home_radio_checked"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/main_train"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_old"
            android:gravity="center"
            android:orientation="vertical"
            android:text="音乐"
            android:textColor="@drawable/home_radio_checked"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/main_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_recommend"
            android:gravity="center"
            android:orientation="vertical"
            android:text="管理"
            android:textColor="@drawable/home_radio_checked"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_mine"
            android:gravity="center"
            android:orientation="vertical"
            android:text="我的"
            android:textColor="@drawable/home_radio_checked"
            android:textSize="12sp" />
    </RadioGroup>
</LinearLayout>