<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zut.lpb">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/icon_header"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.UpdateProfileActivity">
        </activity>
        <activity android:name=".activity.SignUpActivity" >
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.HomeActivity" >
        </activity>
        <activity android:name=".activity.LauncherActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".activity.FeedBackActivity" />
        <activity android:name=".activity.AboutActivity" />
        <activity android:name=".activity.AddUrlActivity" />
        <activity android:name=".activity.VideoPlayActivity" />
        <activity android:name=".activity.MusicPlayActivity" />
    </application>

</manifest>